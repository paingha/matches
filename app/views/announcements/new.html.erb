 <%= form_for :announcement, url: announcement_index_path, html: { multipart: true } do |f| %>
  
  <p>
    <%= f.label :text %><br>
    <%= f.text_area :text %>
  </p>
  
  <p>
    <%= f.label :published %><br>
    <%= f.check_box :published %>
  </p>
  
  <p>
    <%= f.submit "Publish" %>
  </p> 
  <% end %>