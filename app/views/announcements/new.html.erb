 <div class="row">
 <div class="col-md-3 col-lg-3"></div>
 <div class="col-md-6 col-lg-6">
 <%= form_for :announcement, url: announcements_path, html: { multipart: true } do |f| %>
  
  
  <div class="form-group">
<label class="col-sm-2 control-label">Announcement</label>
<div class="col-sm-10">
<%= f.text_area :text, rows:'3', class:"form-control" %>

</div>
</div>
 <div class="form-group">
<label class="col-sm-2 control-label">Active</label>
<div class="col-sm-10">
<%= f.check_box :published %>
</div>
</div>
  
  <br>
  <p>
    <%= f.submit "Publish" %>
  </p> 
  <% end %>
  </div>
  <div class="col-md-3 col-lg-3"></div>
  </div>