<%= form_for :match, url: matches_path, html: { multipart: true } do |f| %>
  
  <p>
    <%= f.label :receiver_id %><br>
  <%= f.collection_select :receiver_id, User.all, :id, :name, { prompt: "Choose a User" }, input_html: { class: "dropdown-toggle" } %>
  </p>
  <p>
    <%= f.label :giver_id %><br>
  <%= f.collection_select :giver_id, User.all, :id, :name, { prompt: "Choose a User" }, input_html: { class: "dropdown-toggle" } %>
  </p>
  
  <p>
    <%= f.submit "Publish", class: 'btn btn-primary'%>
  </p> 
  <% end %>
