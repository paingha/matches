<div class="m-x-n-g m-t-n-g overflow-hidden">
<div class="row">
<% @announcement.each do |announcement| %>
<div class="col-sm-12">
<div class="card card-block bg-white">
<h4 class="card-title">Announcement</h4>
<p class="card-text"><%= sanitize(announcement.text.truncate(400, separator: '</p>')) %></p>
<%= link_to "View More", announcement_path(announcement), class:"btn btn-primary" %>
</div>
</div>
<% end %>
</div>
  </div>
